<h2>Here's a form to edit a Cryptid<%= crypt.name %></h2>

<form action="/cryptids/<%= crypt.id %>/?_method=PUT" method="POST">
    <label for="crypt-type">Image:</label>
    <input type="text" name="type" id="dino-type" value="<%= crypt.img_url %>">

    <label for="crypt-name">Name:</label>
    <input type="text" name="name" id="crypt-name" value="<%= crypt.name %>">

    <input type="submit" value="Edit that Crypt!">
</form>